<div class="main users-new">
  <div class="container">
    <div class="form-heading">登録</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/add/create") do %>
          <p>お名前</p>
          <input name="name" >
          <p>登録するお客様ID</p>
          <input  name="user_id" >
          <p>生年月日</p>
          <input  name="birthday"  >

          <input type="submit" value="登録する">
        <% end %>
      </div>
    </div>
  </div>
</div>
